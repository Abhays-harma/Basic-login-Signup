<body>
    <h1>Login Form</h1>

    <div class="flex">
        <form action="/register" method="post">
            <input type="text" name="username" value="" placeholder="Enter your UserName" id="">
            <input type="text" name="name" value="" placeholder="Enter your Name" id="">
